{
  "name": "chinese-culture-high-tech",
  "version": "1.0.0",
  "description": "A modern website showcasing the intersection of Chinese culture and high technology",
  "main": "index.html",
  "scripts": {
    "start": "bundle exec jekyll serve",
    "dev": "bundle exec jekyll serve --livereload",
    "build": "bundle exec jekyll build",
    "build:prod": "JEKYLL_ENV=production bundle exec jekyll build",
    "clean": "bundle exec jekyll clean",
    "doctor": "bundle exec jekyll doctor",
    "serve": "bundle exec jekyll serve",
    "deploy": "npm run build:prod && git add . && git commit -m 'Build and deploy' && git push"
  },
  "keywords": [
    "chinese-culture",
    "high-technology",
    "static-website",
    "responsive-design",
    "modern-web",
    "cultural-heritage",
    "innovation",
    "github-pages"
  ],
  "author": "Chinese Culture in High Tech Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/chinese-culture-high-tech.git"
  },
  "homepage": "https://yourusername.github.io/chinese-culture-high-tech",
  "bugs": {
    "url": "https://github.com/yourusername/chinese-culture-high-tech/issues"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.57.0",
    "live-server": "^1.2.2",
    "serve": "^14.2.1",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "uglify-js": "^3.17.4"
  },
  "engines": {
    "node": ">=14.0.0",
